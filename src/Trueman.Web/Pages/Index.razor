@using Microsoft.AspNetCore.Authorization
@page "/"

@if (User != null)
{
    <div class="col-lg-12 text-center">
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">UPN</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@User.UserPrincipalName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">First name</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@User.GivenName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Last name</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@User.Surname">
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(Photo))
            {
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Photo</label>
                    <div class="col-sm-10">
                        <img src="@($"data:image/png;base64,{Photo}")">
                    </div>
                </div>
            }
        </form>
    </div>
}

